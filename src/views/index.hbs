<div class="row">
    <div class="col-md-4 ">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+016587124532" autocomplete="off">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Send</button>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
        <ul class="list-group" style="height: 70vh; overflow-y:auto;" id="messages">
            {{#each messages}}
            <li class="list-group-item list-group-item-info list-group-item-action text-center">
                <p>Body: {{Body}}</p>
                <span>{{_id}}</span>
                <span>{{hideNumber To}}</span>
                <span>{{hideNumber From}}</span>
                <span>{{timeago createdAt}}</span>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <div class="text-center">
            <h2>No Messages Yet.</h2>
        </div>
        {{/if}}
    </div>
</div>